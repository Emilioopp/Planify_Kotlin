<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTituloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de la sesión"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.1"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvDetalleNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la sesión"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvDetalleFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvDetalleHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvDetalleDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnEditarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar sesión"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnEliminarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar sesión"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"/>
</LinearLayout>
