<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloDetalleEval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evaluación"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvAsignaturaDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asignatura:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvTipoDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvFechaDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnEditarEval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Evaluación"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnEliminarEval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Evaluación" />

</LinearLayout>