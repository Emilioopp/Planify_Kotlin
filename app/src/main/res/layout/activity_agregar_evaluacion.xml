<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloEvalForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar evaluación"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignatura:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edtAsignaturaEval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Matemáticas"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de evaluación"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edtTipoEval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Prueba"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edtFechaEval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar fecha"
            android:focusable="false"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnGuardarEval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />
    </LinearLayout>

</ScrollView>